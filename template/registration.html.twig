{% extends 'base.html.twig' %}
{% block tittle %}Регистрация{% endblock %}
{% block body %}
    <body class="form_group_body">
    <form method="POST" class="form_group_form">
        <h1 class="form_title">Добро пожаловать</h1>
        <div class="form_group">
            <input type="text" name="login" id="login" required>
            <label for="login">Введите логин</label>
        </div>
        <div class="form_group">
            <input type="password" name="password" id="pass" required>
            <label for="pass">Ведите пароль</label>
        </div>
        <div class="form_group">
            <input type="email" name="email" id="email" required>
            <label for="email">Введите Email</label>
        </div>
        <div class="form_group">
            <input type="text" name="name" id="text" required>
            <label for="text">Введите Ф.И.О</label>
        </div>
        <div class="form_group">
            <button type="submit" class="btn btn-primary btn-lg btn-block" value="registration" name="registration">
                Регистрация
            </button>
        </div>
    </form>
    </body>

{% endblock %}